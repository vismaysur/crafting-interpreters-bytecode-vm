// String equality (tests interning)
"same" == "same";
("sa" + "me") == "same";
("s" + "a" + "m" + "e") == "same";
("lo" + "x") == ("l" + "ox");
"diff" != "different";

// Hash table stress tests (string interning)
("foo" + "bar" + "baz") == ("fo" + "o" + "barbaz");
("xy" + "z") == ("x" + "yz");
("repeat" + "ed") == "repeated";
"abcd" == "abce";

// Truthiness check in combined expressions
!(1 < 2 == false);

